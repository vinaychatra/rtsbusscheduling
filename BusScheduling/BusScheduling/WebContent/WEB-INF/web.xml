<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app id="WebApp_ID">
	<display-name>DynaWebApp</display-name>
	<servlet>
		<servlet-name>AddPassengerServlet</servlet-name>
		<display-name>AddPassengerServlet</display-name>
		<description>Whenever a passenger is added a marker is added to the passenger's source</description>
		<servlet-class>
		web.AddPassengerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description>Authenticates a user</description>
		<servlet-class>
		web.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<display-name>LogoutServlet</display-name>
		<description>Logging out</description>
		<servlet-class>
		web.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ScheduleServlet</servlet-name>
		<display-name>ScheduleServlet</display-name>
		<description>Schedule buses</description>
		<servlet-class>
		web.ScheduleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemovePassengerServlet</servlet-name>
		<display-name>RemovePassengerServlet</display-name>
		<description>Remove a passenger</description>
		<servlet-class>
		web.RemovePassengerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BusSelectServlet</servlet-name>
		<display-name>BusSelectServlet</display-name>
		<description>Display the bus path of the selected bus</description>
		<servlet-class>
		web.BusSelectServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AddPassengerServlet</servlet-name>
		<url-pattern>/addpassenger.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ScheduleServlet</servlet-name>
		<url-pattern>/schedule.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemovePassengerServlet</servlet-name>
		<url-pattern>/removepassenger.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BusSelectServlet</servlet-name>
		<url-pattern>/buspathview.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
